  <!-- Custom Scripts -->
  <script>
    $(document).ready(function($) {
      //--->add row at the end > start
      $(document).on('click', ".btn_row_add_below_end", function(e) {
        var tableBody = $('#myTable').find("tbody");
        var trLast = tableBody.find("tr:last");
        var trNew = trLast.clone();
        var len = $('#myTable tr').length;
        
        trLast.after(trNew);

        // Reset and update form elements in the new row
        var inputs = trNew.find("input");
        inputs.each(function(index) {
          var input = $(this);
          var oldId = input.attr('id');
          var newId = oldId.replace(/\d+/, len);
          
          input.attr('id', newId);
          input.attr('name', newId);
          
          // Clear value except for number input
          if (!newId.includes('number')) {
            input.val('');
          } else {
            input.val(len);
          }
        });

        // Update select elements
        var selects = trNew.find("select");
        selects.each(function(index) {
          var select = $(this);
          var oldId = select.attr('id');
          var newId = oldId.replace(/\d+/, len);
          
          select.attr('id', newId);
          select.attr('name', newId);
          
          // Reset to first option
          select.prop('selectedIndex', 0);
        });

        // Update labels
        trNew.find("label").each(function() {
          var label = $(this);
          var oldFor = label.attr('for');
          var newFor = oldFor.replace(/\d+/, len);
          label.attr('for', newFor);
        });
      });
    });
  </script>
  
